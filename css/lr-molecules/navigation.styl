// ==========================================================================
// Navigation
// ==========================================================================
.navbar
	& .has-depth
		box-shadow $drop-shadow-depth-1
	a
		color $lr_col_brandBlue
		font-weight 600
		text-decoration none
		cursor pointer
		font-size 14px
		&:hover
			opacity $ma_opa_lightText-Secondary
	.btn
		a
			font-size 0.85rem
			&:hover
				opacity 1 //Btn is not effecred by the opacity

.navbar-inverse
	.navbar-toggler
		border-color white
		border none !important
		padding 0.25rem 0.25rem
		.material-icons
			display block
			font-size 1.75rem
