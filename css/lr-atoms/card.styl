.card
	background-color white
	border-radius 16px
	padding 32px
	margin-top 32px
	margin-left auto
	margin-right auto
	margin-bottom 32px
	max-width 600px
	overflow hidden
	transition all 0.3s ease
	box-shadow $drop-shadow-depth-2
	&:hover
		box-shadow $drop-shadow-depth-5
	.btn
		margin 0 auto
		transform: scale(1.05, 1.05)
		box-shadow $drop-shadow-depth-1