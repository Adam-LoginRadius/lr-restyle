// ==========================================================================
// Button
// ==========================================================================

button
	background-color transparent

// on a object
a.btn
	display inline-block
	font-weight 600
	text-transform uppercase
	text-align: center;
	white-space: nowrap;
	user-select none
	border: 1px solid transparent;
	line-height 1
	border-radius 4px
	padding 16px 12px
	font-size 1rem
	transition color 0.3s ease-in-out, border 0.3s ease-in-out, background 0.3s ease-in-out
	&.btn-contain
		display inline-block
	&.btn-default
		border 1px solid $ma_col_grey500
	&.btn-primary
		border 1px solid $lr_col_sys_Blue-normal
		background $lr_col_sys_Blue-normal
		color white
		&:hover
		&:active
		&:focus
			border 1px solid $lr_col_sys_Blue-dark
			background $lr_col_sys_Blue-dark
	// &.btn-success
	// &.btn-info
	// &.btn-warning
	// &.btn-danger
	&.btn-link
		border 1px solid transparent
	&.btn-revese
		border 1px solid white
		background white
		&.lr_col_sys_Blue-dark
			color $lr_col_sys_Blue-dark
		&:hover
		&:active
		&:focus
			background rgba(255,255,255,0)
			color white

//to Any object
.btn
	display block
	width auto
	margin-left 0 //overcome random CSS sheet
	background-color transparent
	a
		text-transform uppercase
		text-align center
		white-space nowrap
		user-select none
		color white
		font-weight 600
		text-decoration none
	&.btn-primary
		border 1px solid $lr_col_sys_Blue-normal
		background $lr_col_sys_Blue-normal
		color white
		&:hover
		&:not([disabled]):not(.disabled):active
		&:focus
			border 1px solid $lr_col_sys_Blue-dark
			background $lr_col_sys_Blue-dark
	&.btn-link-like
		padding 0
	&.btn-revese-border
		border 1px solid $ma_col_grey500
		color $lr_col_brandBlack-light
		background transparent
		text-transform uppercase
		font-weight 600
		&:hover
		&:active
		&:focus
			background $lr_col_brandBlack-light
			border 1px solid $lr_col_brandBlack-light
	&.btn-see-all
		padding 0
		display inline-block
		font-size 14px
		text-transform none
		color $lr_col_sys_Blue-normal
		text-decoration underline
		&:before
			content "("
			color $lr_col_brandBlack 
		&:after
			content ")"
			color $lr_col_brandBlack 
		&:hover
		&:active
		&:focus
			color $lr_col_sys_Blue-light
			
// on the li object
li.btn
	border 0px
	padding 0
	display flex
	align-items center
	line-height 1
	font-size 0
	a
		display inline-block
		font-weight 600
		text-transform uppercase
		white-space: nowrap;
		border 1px solid transparent;
		line-height 100%
		border-radius 4px
		padding 0.5rem 12px
		font-size 1rem
		transition color 0.3s ease-in-out, border 0.3s ease-in-out, background 0.3s ease-in-out
	&[class*="btn-"]
		background transparent
		border 1px solid transparent
	&.btn-primary
		a
			border 1px solid $lr_col_sys_Blue-normal
			background $lr_col_sys_Blue-normal
			color white
		&:hover
		&:not([disabled]):not(.disabled):active
		&:focus
			background transparent
			border 1px solid transparent
			a
				background $lr_col_sys_Blue-dark
				border 1px solid $lr_col_sys_Blue-dark
	&.btn-revese-border
		a
			color $lr_col_brandBlack-light
			border 1px solid $ma_col_grey500
		&:hover
		&:active
		&:focus
			background transparent
			border 1px solid transparent
			a
				color white
				background $lr_col_brandBlack-light
				border 1px solid $lr_col_brandBlack-light
				

		


