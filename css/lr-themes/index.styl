// Sub Site Navigation Sub Title
.logo-sub_title
	position relative
	&-partner_portal::after
		/* Partner Protoal */
		content "Partner Portal"
		display block
		position absolute
		right 0
		bottom -10px
		font-size 0.75rem
		font-family  'Ubuntu', 'Helvetica', 'Arial', Sans-serif
		color $lr_base_text_color
		font-weight 300
		transform translate(0%, -50%)
		

