body
	font-family 'Open Sans', 'Ubuntu', 'Helvetica', 'Arial', Sans-serif
	font-size 16px
::selection
	background $lr_col_sys_Orange-light
	color white
	text-shadow none

	
h1, .h1
	font-size 2em 
	line-height 35px 
	font-weight 300
	@media screen and (min-width 768px)
		font-size 2.563em 
		line-height 40px

h2, .h2
	font-size 2em 
	line-height 35px 
	@media screen and (min-width 768px)
		font-size 2.563em 
		line-height 40px

h3, .h3
	font-size 2em 
	line-height 1

h4, .h4
	font-size 16px
	line-height 1.71em 
	@media screen and (min-width 768px)
		font-size 1.313em
		line-height 30px

h5, .h5 
	font-size 1.313em
	line-height 30px 

p, .p
	font-size 16px
	line-height 1.71em 

a 
	text-decoration none
	

