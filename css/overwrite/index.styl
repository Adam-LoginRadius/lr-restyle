// ==========================================================================
// Gravity Form Overwrite
// ==========================================================================

.base-form
	h3
		text-align center
		// margin-bottom .36em
	.gform_wrapper
		//Basic form
		ul.gform_fields li.gfield
			padding-right 0
		label.gfield_label
			font-weight 600
		.gfield_required
			color $lr_col_sys_Orange-light
		input:not([type=radio]):not([type=checkbox]):not([type=submit]):not([type=button]):not([type=image]):not([type=file]), option
			padding-left .75em
		div.ginput_container
			input
			select
				background white
				border-radius 4px
				border 1px solid $ma_col_grey300
				outline none
				&::placeholder
					font-size 14px
					color $ma_col_grey500
					vertical-align center
					display inline
					padding-top 2px
					padding-bottom 2px
				&:hover
					border 1px solid $lr_col_brandBlue-normal
				&:focus
				&:active
					border 1px solid $lr_col_brandBlue-normal
					box-shadow none
					color $lr_base_text_color
			select
				height 37px
				padding-left 8px
				padding-right 8px
				appearance none
			&.ginput_container_select
				position relative
				&:after
					content "â–¼"
					font-size 14px
					pointer-events none
					display block
					background-color white
					color $ma_col_grey700
					height 16px
					width 16px
					padding 0 16px 0 8px
					position absolute
					right -4px
					top calc(50% - 2px)
					transform translate(-50%, -50%)
		.gform_page_footer input, .gform_footer input
			width 100% !important
			background $lr_col_sys_Orange-normal
			color white
			@extend a.btn
			&:hover
				background $lr_col_sys_Orange-light
				transform: scale(1.05, 1.05)
				box-shadow $drop-shadow-depth-1
			&:focus
				border none
		//Error
		&.gform_validation_error
			.gform_body
				ul
					li.gfield.gfield_error:not(.gf_left_half):not(.gf_right_half)
						@media only screen and (min-width: 641px)
							max-width 100% !important
			li.gfield_error
				input:not([type=radio]):not([type=checkbox]):not([type=submit]):not([type=button]):not([type=image]):not([type=file])
				textarea
					border 1px solid $lr_col_sys_red-normal
		div.validation_error
			background-color $lr_col_sys_red-light
			color white
			font-size: 0.75em
			border none
			font-weight 500
			transform scale(1.3)
			padding-left 6em
			padding-right 6em
			margin-top -44px
			padding-bottom 1.5em
			max-width 600px
			margin-bottom 4em
			position relative
			&:before
				content " "
				display block
				width 25px
				height 25px
				margin 1em auto 1.2em
				border-left: 25px solid transparent
				border-right: 25px solid transparent
				border-bottom: 50px solid #fff
			&:after
				content " "
				display block
				width 4px
				height 30px
				top 58px
				left 50%
				transform translate(-50%, -50%)
				background $lr_col_sys_red-light
				position absolute
		.gfield_error
			.gfield_label
				color $lr_col_sys_red-normal
		.validation_message
			color $lr_col_sys_red-normal
		li.gfield.gfield_error
			border none
		
